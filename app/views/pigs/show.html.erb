<div class="flexbox-pig">
<!--   <%=image_tag @pig.photo, id:"pig-picture"%> -->


  <div class ="pig-info">

      <h2><strong><%= @pig.name %></strong></h2>
      <p>Weight: <%= @pig.weight %></p>
      <p>Age: <%= @pig.age %></p>
      <p>Profession: <%= @pig.profession %></p>
      <p>Bio: <%= @pig.bio %></p>
      <p>Price: <%= @pig.price %> € per day</p>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Book now
    </button>
    <% unless @pig.bookings.where(user: current_user).empty?%>
    <p style="color:green"><%= "booked"%></p>
    <% end %>
  </div>
<%=image_tag @pig.photo, id:"pig-picture"%>

</div>



          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%= simple_form_for [@pig, @booking] do |f| -%>
                  <%= f.input :booking_date, as: :date %>
                  <%= f.submit %>

                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>
